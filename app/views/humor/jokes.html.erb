
<% Noun.sample do |noun| %>

  I am going to incubate <%= noun %> that <%= Person.read("person") %> <%= Verb.read("verb") %> after <%= Event.read("event") %>

<% end %>

<div class="row">
  <div class="col-md-5">
     <div class="form-group">
          <%= label_tag "noun", "Pick a noun:" %>
          <%= text_field_tag "noun", "", "class" => "form-control" %>
     </div>

     <div class="form-group">
          <%= label_tag "noun", "Pick a noun:" %>
          <%= text_field_tag "noun", "", "class" => "form-control" %>
     </div>

     <div class="form-group">
          <%= label_tag "person", "Pick a person:" %>
          <%= text_field_tag "person", "", "class" => "form-control" %>
     </div>

     <div class="form-group">
          <%= label_tag "verb", "Pick a verb:" %>
          <%= text_field_tag "verb", "", "class" => "form-control" %>
     </div>

     <div class="form-group">
          <%= label_tag "event", "Pick an event:" %>
          <%= text_field_tag "event", "", "class" => "form-control" %>
     </div>

